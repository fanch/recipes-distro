n=clutter
v=1.18.2
u=http://ftp.gnome.org/pub/gnome/sources/$n/${v%.*}/$n-$v.tar.xz

Src() {
	./configure --prefix=$usr \
				--enable-introspection \
				--enable-egl-backend \
				--enable-evdev-input \
    			--enable-wayland-backend \
    			--enable-wayland-compositor \
    			--disable-x11-backend \
    			--disable-gdk-backend \
    			--without-x
	make
}

Pkg() {
	make DESTDIR=$pkg install
}