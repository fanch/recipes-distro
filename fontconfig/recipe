n=fontconfig
v=2.11.1
s=supra
u=http://www.fontconfig.org/release/$n-$v.tar.gz

Src() {
	libtoolize -f
	autoreconf -fi

	./configure --prefix=$usr \
				--sysconfdir=$etc \
				--localstatedir=$var \
  				--with-default-fonts=$shr/fonts \
  				--with-add-fonts=$shr/fonts \
  				--with-templatedir=$etc/fonts/conf.avail \
  				--with-xmldir=$etc/fonts
	make
}

Pkg() {
	make DESTDIR=$pkg install
}
