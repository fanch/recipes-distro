n=ca-certificates
v=20140325
s=infra
u=http://ftp.debian.org/debian/pool/main/c/$n/"$n"_"$v".tar.xz
p=$n

Src() {
	sed -i 's/sbin/bin/' sbin/Makefile
	make SUBDIRS=mozilla
}

Pkg() {
	install -d -m755 $pkg/{etc/ca-certificates/update.d,usr/{bin,share/ca-certificates},etc/ssl/certs}

	make install SUBDIRS=mozilla DESTDIR=$pkg

	install -D -m644 sbin/update-ca-certificates.8 $pkg/$shr/man/man8/update-ca-certificates.8

	(
	echo "# Automatically generated by $n-$v"
	echo "# see update-ca-certificates man page"
	echo "# "
	cd $pkg/$shr/ca-certificates
	find . -name '*.crt' | sort | cut -b3-
	) > $pkg/$etc/ca-certificates.conf
}
