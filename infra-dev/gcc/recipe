n=(gcc gcc-libs)
v=4.8.2
u=ftp://gcc.gnu.org/pub/gcc/releases/$n-$v/$n-$v.tar.bz2
g=(infra-dev infra)

Src() {
	# install x86_64 libraries ino /lib
	sed -i '/m64=/s/lib64/lib/' gcc/config/i386/t-linux64

	echo $v > gcc/BASE-VER

	mkdir gcc-build && cd gcc-build	

	$src/$n-$v/configure --prefix=$usr \
						 --libdir=$lib \
						 --enable-languages=c,c++,fortran \
						 --enable-shared \
						 --enable-threads=posix \
						 --enable-__cxa_atexit \
						 --disable-multilib \
						 --with-system-zlib \
						 --without-isl \
						 --without-cloog
	make
}

Pkg_gcc() {
	cd gcc-build

	make DESTDIR=$pkg install

	# many packages expect this symlinks
  	ln -s gcc $pkg/$bin/cc

	rm -f $pkg/$shr/info/dir

	mv $pkg/$lib/lib* $src
}

Pkg_gcc-libs() {
	mkdir -p $pkg/$lib
	mv $src/lib* $pkg/$lib
}