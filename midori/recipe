n=midori
v=0.5.8
s=supra
u=http://midori-browser.org/downloads/"$n"_"$v"_all_.tar.bz2
p=./

Src() {
	mkdir build; cd build

	cmake .. -DCMAKE_INSTALL_PREFIX=$usr \
			 -DCMAKE_INSTALL_LIBDIR=lib \
			 -DUSE_GTK3=1 \
			 -DUSE_ZEITGEIST=0 \
			 -DHALF_BRO_INCOM_WEBKIT2=1
	make
}

Pkg() {
	make -C build DESTDIR=$pkg install
}