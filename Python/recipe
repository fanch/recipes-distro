n=Python
v=2.7.6
s=infra-dev
u=http://www.python.org/ftp/python/$v/$n-$v.tar.xz

Src() {
	patch -Np1 -i $rcs/Python-2.7.6-readline_6_3-1.patch

	./configure --prefix=$usr \
				--enable-shared \
				--with-system-expat \
				--with-system-ffi   \
				--enable-unicode=ucs4 \
				--with-dbmliborder=gdbm:ndbm
	make
}

Pkg() {
	make DESTDIR=$pkg install

	mv $pkg/$bin/2to3{,-2.7}
}