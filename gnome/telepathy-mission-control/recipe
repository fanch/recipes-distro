n=telepathy-mission-control
v=5.16.1
u=http://ftp.gnome.org/pub/gnome/sources/$n/${v%.*}/$n-$v.tar.xz

Src() {
	./configure --prefix=$usr \
    			--with-connectivity=nm \
        		--enable-gtk-doc \
        		--disable-upower \
        		--disable-static \
        		--disable-schemas-compile
	make
}

Pkg() {
	make DESTDIR=$pkg install
}