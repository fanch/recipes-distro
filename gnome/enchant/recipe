n=enchant
v=1.6.0
u=http://www.abisource.com/downloads/$n/$v/$n-$v.tar.gz

Src() {
	./configure --prefix=$usr \
				--disable-static \
    			--disable-ispell \
    			--disable-aspell \
    			--disable-hspell \
    			--disable-hunspell \
    			--disable-myspell
	make
}

Pkg() {
	make DESTDIR=$pkg install
}