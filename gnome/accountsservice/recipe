n=accountsservice
v=0.6.37
u=http://www.freedesktop.org/software/$n/$n-$v.tar.xz

Src() {
	./configure --prefix=$usr \
				--sysconfdir=$etc \
				--localstatedir=$var \
				--disable-static \
				--enable-systemd \
				--with-systemdsystemunitdir=$lib/systemd/system
	make
}

Pkg() {
	make DESTDIR=$pkg install
}