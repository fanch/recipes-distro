n=gnome-settings-daemon
v=3.13.1
u=http://ftp.gnome.org/pub/gnome/sources/$n/${v%.*}/$n-$v.tar.xz

Src() {
	patch -p1 -i $rcs/gnome-settings-daemon-3.12.0-optional.patch
	autoreconf -fi

	./configure --prefix=$usr \
				--sysconfdir=$etc \
				--localstatedir=$var \
				--disable-static \
				--disable-wacom \
				--disable-cups
	make
}

Pkg() {
	make DESTDIR=$pkg install
}