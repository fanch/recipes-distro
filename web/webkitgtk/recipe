n=webkitgtk
v=2.4.1
u=http://webkitgtk.org/releases/$n-$v.tar.xz

Src() {
	./configure --prefix=$usr \
				--enable-introspection \
				--enable-wayland-target \
				--disable-x11-target \
				--disable-geolocation \
				--disable-glx \
				--enable-egl \
				--enable-gles2
	make
}

Pkg() {
	make DESTDIR=$pkg install
}