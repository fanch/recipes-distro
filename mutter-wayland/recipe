n=mutter-wayland
v=3.12.1
s=gnome
u=http://ftp.gnome.org/pub/gnome/sources/$n/${v%.*}/$n-$v.tar.xz

Src() {
	./configure --prefix=$usr \
				--sysconfdir=$etc \
				--localstatedir=$var \
				--disable-static \
				--disable-schemas-compile
	make
}

Pkg() {
	make DESTDIR=$pkg install

	rm -r $pkg/$shr/{man,gtk-doc,GConf,gnome-control-center}
	rm $pkg/$shr/glib-2.0/schemas/org.gnome.mutter.gschema.xml
}