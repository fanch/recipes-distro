n=Mesa
v=10.1.4
s=supra
u=ftp://ftp.freedesktop.org/pub/mesa/$v/MesaLib-$v.tar.bz2

Src() {
	autoreconf -vfi

	./configure --prefix=$usr \
				--sysconfdir=$etc \
	  			--enable-gles2 \
	  			--enable-gbm \
	  			--enable-gallium-gbm \
	  			--enable-shared-glapi \
	  			--disable-gallium-egl \
	  			--with-egl-platforms=x11,wayland,drm \
	  			--with-gallium-drivers=r300,r600,radeonsi,swrast,nouveau
	make
}

Pkg() {
	make DESTDIR=$pkg install
}