n=evolution-data-server
v=3.13.1
s=gnome
u=http://ftp.gnome.org/pub/gnome/sources/$n/${v%.*}/$n-$v.tar.xz

Src() {
	./configure --prefix=$usr \
				--sysconfdir=$etc \
				--localstatedir=$var \
				--with-libdb=$usr \
				--enable-vala-bindings \
				--disable-uoa
	make
}

Pkg() {
	make DESTDIR=$pkg install
}