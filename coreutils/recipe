n=coreutils
v=8.22
s=infra
u=ftp://ftp.gnu.org/gnu/$n/$n-$v.tar.xz

Src() {
	patch -p1 -i $rcs/coreutils-8.22-shuf-segfault.patch

	./configure --prefix=$usr \
				--with-openssl \
				--enable-no-install-program=groups,kill,uptime
	make
}

Pkg() {
	make DESTDIR=$pkg install

	rm -f $pkg/$shr/info/dir
}