n=kmod
v=18
s=infra
u=ftp://ftp.kernel.org/pub/linux/utils/kernel/$n/$n-$v.tar.xz

Src() {
	./configure --prefix=$usr \
				--sysconfdir=$etc \
				--with-zlib
	make
}

Pkg() {
	make DESTDIR=$pkg install

	cd $pkg/$bin
	for m in depmod lsmod modinfo modprobe insmod rmmod; do
	  ln -s kmod ${m}
	done
}